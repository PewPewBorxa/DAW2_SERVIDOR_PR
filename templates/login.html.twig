{% extends "layoutlogin.html.twig" %}
{% block content %}
	<div class="footer__section">
		<div class="container">
			<div class="footer-top">
				<div class="row m-0">
					<div class="col-lg-8 p-0">
						<div class="footer-form-warp">
							<div class="section-title">
								<div class="sub-title">Login</div>
							</div>
							<form action='{{ path('recibelogin') }}' method="post">
								<div class="row">
									<div class="col-lg-6">
										<input type="text" placeholder="Username" name="usuario">
									</div>
									<div class="col-lg-6">
										<input type="text" placeholder="Password" name="password">
									</div>
									<div class="col-lg-12">
										<button class="site__btn">LOG-IN</button> 
										 <button class="site__btn"><a href='{{ path('register') }}'>Register</a></button>                             
									</div>
								</div>
							</form>
						</div>
					</div>
					<div class="col-lg-4 p-0">
						<img src="img/login_register.png" alt="clouds">
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endblock %}