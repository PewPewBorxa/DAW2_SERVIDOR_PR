{% extends 'layoutcrud.html.twig' %}

{% block title %}Contacto
{% endblock %}

{% block content %}
	<div style='margin-top:100px'>
		<h1>Contacto</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ contacto.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ contacto.name }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ contacto.email }}</td>
				</tr>
				<tr>
					<th>Message</th>
					<td>{{ contacto.message }}</td>
				</tr>
				<tr>
					<th>Website</th>
					<td>{{ contacto.website }}</td>
				</tr>
				<tr>
					<th>Date</th>
					<td>{{ contacto.date ? contacto.date|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a class='site__btn' href="{{ path('contacto_index') }}">back to list</a>

		<a class='site__btn' href="{{ path('contacto_edit', {'id': contacto.id}) }}">edit</a>

		{{ include('contacto/_delete_form.html.twig') }}
	</div>
{% endblock %}
