{{ form_start(form,{'attr': {'class':'contact-form'}}) }}
<div class="row">
	<div class="col-lg-4">
		{{form_label(form.name)}}
		{{ form_widget(form.name,{'attr':{'placeholder':'Name'}})}}
	</div>
	<div class="col-lg-4">
		{{form_label(form.email)}}
		{{ form_widget(form.email,{'attr':{'placeholder':'Email'}})}}
	</div>
	<div class="col-lg-4">
		{{form_label(form.message)}}
		{{ form_widget(form.message,{'attr':{'placeholder':'Message'}})}}
	</div>
	<div class="col-lg-4">
		{{form_label(form.website)}}
		{{ form_widget(form.website,{'attr':{'placeholder':'Website'}})}}
	</div>
	<div class="col-lg-4">
		{{form_label(form.date)}}
		{{ form_widget(form.date)}}
	</div>
	<button class="site__btn bot">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}
