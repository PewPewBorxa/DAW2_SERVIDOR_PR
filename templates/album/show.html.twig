{% extends 'layoutcrud.html.twig' %}

{% block title %}Album
{% endblock %}

{% block content %}
	<div style='margin-top:100px'>
		<h1>Album</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ album.id }}</td>
				</tr>
				<tr>
					<th>Imagen</th>
					<td>{{ album.imagen }}</td>
				</tr>
				<tr>
					<th>Titulo</th>
					<td>{{ album.titulo }}</td>
				</tr>
				<tr>
					<th>Genero</th>
					<td>{{ album.genero }}</td>
				</tr>
			</tbody>
		</table>

		<a class='site__btn' href="{{ path('album_index') }}">back to list</a>

		<a class='site__btn' href="{{ path('album_edit', {'id': album.id}) }}">edit</a>

		{{ include('album/_delete_form.html.twig') }}
	</div>
{% endblock %}
